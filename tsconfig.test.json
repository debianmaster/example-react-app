{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "jsx": "react-jsx",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.test.ts", 
    "src/**/*.test.tsx", 
    "src/**/*.spec.ts", 
    "src/**/*.spec.tsx", 
    "src/setupTests.ts",
    "src/types/**/*.d.ts"
  ]
} 